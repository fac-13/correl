<h1>Enter Today's Data</h1>

<h2>Symptoms</h2>
<ul>
  {{#each symptomsList}}
  <div id="symptom-rating">
    <span>
      <li>{{this.symptom}}</li>
      {{!-- need to add icon at the end --}}
      <button class="expand">E</button>
    </span>
    <br>
    <input id="scale-{{this.symptom}}" type="range" min="0" max="10" value="0" steps="1">
    <span id="scale-{{this.symptom}}-number"></span>
    <p id="comment-{{this.symptom}}">Any comments you've saved will appear here as you move the scale</p>
  </div>
  {{/each}}
</ul>


<h2>Factors</h2>

<ul>
  {{#each factorsList}}
  <div id="factor-rating">
    <span>
      <li>{{this.factor}}</li>
      {{!-- need to add icon at the end --}}
      <button class="expand">E</button>
    </span>
    <br>
    <input id="scale-{{this.factor}}" type="range" min="0" max="10" value="0" steps="1">
    <span id="scale-{{this.factor}}-number"></span>
    <p id="comment-{{this.factor}}">Any comments you've saved will appear here as you move the scale</p>
  </div>
  {{/each}}
</ul>

<button class="finish">Finish</button>